<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean name="threadManager" class="de.neyeon.feathry.dispatcher.ThreadManager">
	</bean>

	<bean name="serviceRegistry" class="de.neyeon.feathry.dispatcher.rpc.SpringContextRegistry">
		<property name="namingPostfix" value="Service" />
	</bean>
	
	<bean name="httpContainer" class="de.neyeon.feathry.dispatcher.http.HttpContainer">
		<property name="workers">
			<map>
				<entry key="xmlrpc" value-ref="xmlRpcWorkerFactory" />
			</map>
		</property>
		<property name="threadManager" ref="threadManager" />
	</bean>
	
	<bean name="xmlRpcWorkerFactory" class="de.neyeon.feathry.dispatcher.xmlrpc.XmlRpcWorkerFactory">
		<property name="serviceRegistry" ref="serviceRegistry" />
	</bean>
	
	<bean name="httpServer" class="de.neyeon.feathry.dispatcher.http.SimpleHttpServer">
		<property name="container" ref="httpContainer" />
		<property name="port" value="8080" />
	</bean>

	 <bean name="rmiRegistry" class="de.neyeon.feathry.dispatcher.rmi.RmiRegistry">
		<constructor-arg ref="serviceRegistry" />
		<property name="port" value="1099" />
	</bean>

</beans>
